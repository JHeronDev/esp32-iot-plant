{
  "name": "ESP32 IoT Plant Monitor - PostgreSQL",
  "description": "PostgreSQL database for user accounts and configuration",
  "builder": "dockerfile",
  "dockerfile": {
    "path": "mqtt-docker/postgres/Dockerfile",
    "buildContext": "."
  },
  "variables": {
    "POSTGRES_DB": {
      "description": "Database name",
      "value": "iot_plant"
    },
    "POSTGRES_USER": {
      "description": "Database user",
      "value": "iot_user"
    },
    "POSTGRES_PASSWORD": {
      "description": "Database password"
    }
  }
}
