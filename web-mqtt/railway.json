{
  "name": "ESP32 IoT Plant Monitor - Web App",
  "description": "Web application for ESP32 IoT Plant Monitor with MQTT and real-time WebSocket",
  "builder": "dockerfile",
  "dockerfile": {
    "path": "./Dockerfile",
    "buildContext": "."
  },
  "variables": {
    "PORT": {
      "description": "Server port",
      "value": "3000"
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "MQTT_BROKER": {
      "description": "MQTT broker URL",
      "value": "mqtt://localhost:1883"
    },
    "JWT_SECRET": {
      "description": "JWT secret key for token signing"
    },
      "description": "InfluxDB URL",
      "value": "http://localhost:8086"
    },
    "INFLUX_TOKEN": {
      "description": "InfluxDB token"
    },
    "INFLUX_ORG": {
      "description": "InfluxDB organization",
      "value": "iot_org"
    },
    "INFLUX_BUCKET": {
      "description": "InfluxDB bucket",
      "value": "plant_data"
    }
  }
}
